{% trans_default_domain 'layout' %}
<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user-circle-o"></i> {{ 'user.logged.as'|trans({'{{ user }}': app.user }) }}<span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
            <li><a href=""><i class="fa fa-cog"></i> {{ 'user.profile'|trans }}</a></li>
