                <li class="divider"></li>
                <li><a href=""><i class="fa fa-wrench"></i> {{ 'user.administrate'|trans }}</a></li>
            {% endif %}
            <li class="divider"></li>
            <li><a href="{{ path('logout') }}"><i class="fa fa-power-off"></i> {{ 'user.logout'|trans }}</a></li>
        </ul>
    </li>
</ul>
