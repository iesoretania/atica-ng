{% trans_default_domain 'list' %}
{% extends 'generic/list.html.twig' %}
{% import 'macros.html.twig' as m %}

{% block path_new %}{% endblock %}
{% block path_list %}{{ app.request.uri }}{% endblock %}

{% block table_header %}
    <th class="col-sm-3"><label><input type="checkbox" id="select"> {{ 'header.name'|trans }}</label></th>
    <th class="col-sm-2">{{ 'header.code'|trans }}</th>
    <th class="col-sm-1">{{ 'header.description'|trans }}</th>
{% endblock %}

{% block table_body %}
            {% for element in elements %}
                {% set url = '' %}
                <tr class="clickable-row" data-href="{{ url }}">
                    <td>
                        <label><input type="checkbox" name="elements[]" value="{{ element.id }}" class="selectable"> <a href="{{ url }}">{{ element.name }}</a></label>
                    </td>
                    <td>
                        <a href="{{ url }}">{{ element.code }}</a>
                    </td>
                    <td>
                        {{ element.description|nl2br }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">{{ 'table.no_items'|trans }}</td>
                </tr>
            {% endfor %}
{% endblock %}

{% block before_table %}
    <form action="" method="post">
{% endblock %}

{% block after_table %}
        <div class="clearfix"></div>
        {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
        {{ m.submit_button('delete', 'trash', 'btn-danger enable-on-items', 'form.delete'|trans) }}
    </form>
{% endblock %}
