{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ m.start_button() }}
    {% if folder.type == constant('AppBundle\\Entity\\Documentation\\Folder::TYPE_NORMAL') %}
        {{ m.submit_button('submit', 'check', 'btn-success', 'form.save'|trans) }}
    {% else %}
        {{ m.submit_button('submit', 'send', 'btn-success', 'form.apply'|trans) }}
        {{ m.submit_button('submit', 'thumbs-up', 'btn-success', 'form.approve'|trans) }}
    {% endif %}
    {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
    {{ m.end_button() }}
    {{ form_end(form) }}
{% endblock %}

